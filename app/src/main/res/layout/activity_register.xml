<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RegisterActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearlayout1"
                android:gravity="center"
                android:background="@color/colorPrimary">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/logo" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="REGISTER"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/linearlayout1"
                android:rotation="45"
                android:id="@+id/imageview1"
                android:layout_marginTop="-10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/square"/>
            <RelativeLayout
                android:id="@+id/relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/imageview1">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:tint="@color/white"
                    android:id="@+id/imageview_usericon"/>
                <EditText
                    android:id="@+id/u_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@+id/imageview_usericon"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/imageview_usericon"
                    android:hint="Name"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativelayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/relativelayout1">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:tint="@color/white"
                    android:id="@+id/imageview_contacticon"/>
                <EditText
                    android:id="@+id/u_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@+id/imageview_contacticon"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/imageview_contacticon"
                    android:hint="Contact number "
                    android:inputType="number"
                    android:textSize="15sp"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativelayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/relativelayout2">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:tint="@color/white"
                    android:id="@+id/imageview_emailicon"/>
                <EditText
                    android:id="@+id/u_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@+id/imageview_emailicon"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/imageview_emailicon"
                    android:hint="Email"
                    android:textSize="15sp"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativelayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/relativelayout3">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:tint="@color/white"
                    android:id="@+id/imageview_pincodeicon"/>
                <EditText
                    android:id="@+id/u_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@+id/imageview_pincodeicon"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/imageview_pincodeicon"
                    android:hint="Password"
                    android:textSize="15sp"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativelayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/relativelayout4">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:tint="@color/white"
                    android:id="@+id/imageview_passwordicon"/>
                <EditText
                    android:id="@+id/c_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@+id/imageview_passwordicon"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/imageview_passwordicon"
                    android:hint="Confirm Password"
                    android:textSize="15sp"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout5"
                android:id="@+id/btn_register"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="REGISTER"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"
        android:inputType="text"
        android:id="@+id/l_username"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:id="@+id/l_password"
       />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/loginApi"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Not registered? Register now!"
       />-->
</ScrollView>
</RelativeLayout>